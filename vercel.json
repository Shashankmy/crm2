{
  "version": 2,
  "buildCommand": "bash ./vercel-build.sh",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/assets/(.*)", "destination": "/public/assets/$1" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/public/index.html" }
  ]
}